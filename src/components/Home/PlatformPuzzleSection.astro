---
import { useTranslations, getLangFromUrl } from "../../i18n/utils";
import BuilderPuzzle from "./BuilderPuzzle.astro";
import PlatformButton from "./PlatformButton.astro";

import Button from "../Button.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="max-w-7xl self-center">
  <div class="flex flex-col items-center gap-10">
    <h2 class="text-center">{t("An all-in-one tool, how?")}</h2>
    <div class="flex flex-col lg:flex-row gap-10">
      <div class="lg:order-1 lg:col-span-4 text-center mx-10">
        <BuilderPuzzle />
      </div>
      <div class="grid lg:order-0 max-lg:grid-cols-2 lg:grid-flow-row gap-4">
        <PlatformButton
          href=""
          caption={t("Use the")}
          name="Builder"
          color="builder"
          buttonText={t("Create")}
          description={t("To create rich and interactive material")}
        />
        <PlatformButton
          href=""
          caption={t("Use the")}
          name="Player"
          color="player"
          buttonText={t("Experience")}
          description={t("And let learners access material in a new way")}
        />
      </div>
      <div class="grid lg:order-2 max-lg:grid-cols-2 lg:grid-flow-row gap-4">
        <!-- TODO: add the urls to navigate to releval pages -->
        <PlatformButton
          href=""
          caption={t("Access the")}
          name="Analytics"
          direction="right"
          color="analytics"
          buttonText={t("Analyze")}
          description={t("To collect insights and data about your class")}
        />
        <PlatformButton
          href=""
          caption={t("Navigate the")}
          name="Library"
          direction="right"
          color="library"
          buttonText={t("Explore")}
          description={t("To find resources and be part of a community")}
        />
      </div>
    </div>
  </div>
</section>
