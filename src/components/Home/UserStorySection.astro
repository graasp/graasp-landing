---
import { useTranslations, getLangFromUrl } from "../../i18n/utils";

import Button from "../Button.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  caption: string;
  title: string;
  description: string;
  href: string;
  buttonText: string;
  color: string;
  direction: "left" | "right";
}
const {
  title,
  description,
  caption,
  direction = "left",
  href,
  buttonText,
} = Astro.props;
---

<div
  class:list={[
    "flex",
    "gap-10",
    "my-4",
    direction === "left" ? "flex-row-reverse" : "",
  ]}
>
  <div class="grow">
    <p>
      {caption}
    </p>
    <h2>{title}</h2>

    <slot />

    <Button>{buttonText}</Button>
  </div>
  <div>
    <img class="rounded-3xl" src="https://picsum.photos/200/200" />
  </div>
</div>
