---
import { Image } from "astro:assets";
import Graasp from "../assets/graasp-hand.svg";
---

<div
  class="relative h-[200px] w-[200px] md:w-[300px] md:h-[300px] self-center p-20"
>
  <div
    class="h-full w-[80%] rounded-full image-bg bg-gradient-to-tr from-graasp from-50% to-graaspLight"
  >
  </div>
  <Image
    alt="graasp logo"
    loading="eager"
    class="logo w-full h-full"
    src={Graasp}
  />
</div>

<style>
  .image-bg {
    /* width: 320px; */
    /* height: 320px; */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: blur(68px);
  }

  .logo {
    max-width: unset;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* width: 320px; */
    /* height: 320px; */
  }
</style>
