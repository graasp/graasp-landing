---
import Layout from "../layouts/Layout.astro";
import SplashSection from "../components/SplashSection.astro";
import Platform from "../components/Platform.astro";
import PlatformButton from "../components/Home/PlatformButton.astro";
import Button from "../components/Button.astro";
import TestimoniesSection from "../components/Home/TestimoniesSection.astro";
import SubscribeSection from "../components/SubscribeSection.astro";
import OurMissionSection from "../components/Home/OurMissionSection.astro";
import UserStorySection from "../components/Home/UserStorySection.astro";
import BuilderPuzzle from "../components/Home/BuilderPuzzle.astro";
import { useTranslations, type UILanguages } from "../i18n/utils";
import { Icon } from "astro-icon/components";
import SignUp from "../components/SignUp.astro";
type Props = {
  lang: UILanguages;
};
const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout title="Graasp" description={t("meta.description")} {lang}>
  <main>
    <SplashSection />
    <section>
      <div class="grid grid-rows-1 grid-flow-col gap-10 my-20">
        <div class="flex flex-row gap-5">
          <div class="flex flex-col justify-evenly">
            <PlatformButton
              caption={t("Use the")}
              name="Builder"
              color="builder"
              buttonText={t("Create")}
              description={t("To create rich and interactive material")}
            />
            <PlatformButton
              caption={t("Use the")}
              name="Player"
              color="player"
              buttonText={t("Experience")}
              description={t("And let learners access material in a new way")}
            />
          </div>
          <div class="text-center mx-10">
            <h2>{t("An all-in-one tool, how?")}</h2>
            <BuilderPuzzle />
          </div>
          <div class="flex flex-col justify-evenly">
            <PlatformButton
              caption={t("Access the")}
              name="Analytics"
              direction="right"
              color="analytics"
              buttonText={t("Analyze")}
              description={t("To collect insights and data about your class")}
            />
            <PlatformButton
              caption={t("Navigate the")}
              name="Library"
              direction="right"
              color="library"
              buttonText={t("Explore")}
              description={t("To find resources and be part of a community")}
            />
          </div>
        </div>
      </div>
    </section>

    <Button>
      {t("Are you a teacher?")}
    </Button>
    <Button>{t("Are you a researcher?")}</Button>

    <section>
      <UserStorySection
        caption={t(
          "Are you a teacher wanting to enhance your content creation?",
        )}
        buttonText={t("Start Today")}
        direction="right"
        title={t("Build your material with Graasp, a structured way toâ€¦")}
      >
        <p>
          {t("Embed interactive apps in your class material")}
        </p>
        <p>
          {t("Connect with a wide community of educators")}
        </p>
        <p>
          {t("Explore detailed analytics about your students")}
        </p>
      </UserStorySection>
      <UserStorySection
        caption={t(
          "Are you a researcher seeking a platform that seamlessly integrates data collection and interactive epxeriences?",
        )}
        buttonText={t("Register Now")}
        title={t("Start using Graasp for your research")}
      >
        <p>
          {
            t(
              "Access a secure and controlled environment for conducting experiments",
            )
          }
        </p>
        <p>
          {t("Conduct tests with several different options")}
        </p>
        <p>
          {t("Join a lively community focused on advancing digital education")}
        </p>
      </UserStorySection>
    </section>

    <OurMissionSection />

    <TestimoniesSection />

    <SubscribeSection />
  </main>
</Layout>

<style>
  main {
    @apply grow text-black;
    @apply bg-background;
  }
</style>
