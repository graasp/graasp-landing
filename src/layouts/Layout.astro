---
import LinkButton from "../components/LinkButton.astro";
import ExternalLink from "../components/ExternalLink.astro";
import Header from "../components/Header.astro";
import MailLink from "../components/MailLink.astro";
import SocialLink from "../components/SocialLink.astro";
import { Icon } from "astro-icon/components";
import Footer from "../components/Footer.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations, type UILanguages } from "../i18n/utils";
import { GA_MEASUREMENT_ID } from "../config/env.ts";
export type LayoutProps = {
  title: string;
  description: string;
  lang: UILanguages;
};
type Props = LayoutProps;

const { title, description, lang } = Astro.props;
const t = useTranslations(lang);
---

<!doctype html>
<html {lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- preload fonts -->
    <link
      rel="preload"
      href="/fonts/Nunito.ttf"
      as="font"
      type="font/truetype"
      cross-origin="anonymous"
    />
    <!-- partytown script -->
    <script
      is:inline
      type="text/partytown"
      async
      src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}
    ></script><script type="text/partytown">
      window.dataLayer = window.dataLayer || [];

      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", GA_MEASUREMENT_ID);
    </script></head
  >

  <body>
    <Header />
    <!-- start main content -->
    <slot />
  </body>
  <!-- end main content -->
  <Footer />
</html>

<style>
  .copyright {
    margin-top: 8px;
    text-align: center;
  }
</style>

<style is:global>
  :root {
    /* --accent: 80, 80, 210; */
    --accent-light: 0, 158, 255;
    --accent-dark: 7, 7, 163;
    --action-color: 27, 183, 31;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --accent-gradient-dark: linear-gradient(
      45deg,
      rgb(var(--accent-dark)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  /* Register your custom font family and tell the browser where to find it. */
  @font-face {
    font-family: "Nunito";
    src: url("/fonts/Nunito.ttf") format("truetype");
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }

  html {
    /* background: #f1f4fc; */
    color: black;
    background-size: 224px;
    @media (prefers-color-scheme: dark) {
      background: #000922;
      color: white;
    }
  }
  main {
    @apply px-10;
    @apply bg-background;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    display: flex;
    flex-direction: column;
    min-height: 100svh;
    margin: 0px;
  }
  header {
    color: oklch(var(--p));
    padding: 16px;
    @apply bg-white;
    @apply shadow-gray-200 shadow;
    z-index: 10;
  }
  footer {
    padding: 1rem;
    background-color: rgb(var(--accent));
    color: white;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    color: oklch(var(--p));
  }
  h1 {
    font-size: 3.5rem;
  }

  h2 {
    font-size: 2em;
  }

  h3 {
    font-size: 1.5em;
  }

  h4 {
    font-size: 1.2em;
  }

  h5 {
    font-size: 1em;
  }

  section {
    margintop: 40px;
    marginbottom: 40px;
  }

  p {
    /* @apply max-w-xl; */
  }
  .container {
    margin: auto;
    padding: 1rem;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }
</style>
